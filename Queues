/*

Simple class used to demonstrate Queue structures using a linked list.

 */

class Queue {
  constructor() {
    this.head = null;
    this.tail = null;
    this.length = 0;
  }

  // Add a value to the end of the queue
  enqueue(val) {
    var newNode = new Node(val)
    if (this.tail === null) {
      this.head = newNode;
      this.tail = newNode;
    }
    else {
      this.tail.next = newNode;
      this.tail = newNode;
    }
    this.length++;
  }

  //Remove the first value in the queue.
  dequeue() {
    if (this.head === null) {
      return null;
    }

    var oldhead = this.head;
    var newHead = this.head.next;
    if (this.head === this.tail) {
      this.tail = null;
    }
    this.head.next = null
    this.head = newHead;
    this.length--;
    return oldhead;
  }
}

class Node {
  constructor(val) {
    this.value = val;
    this.next = null;
  }
}

var queue = new Queue();
