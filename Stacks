/*

A simple class which demonstrates how a Stack stucture works using a linked list.

 */

class Stack
{
  constructor()
  {
    this.head = null;
    this.tail = null;
    this.length = 0;
  }

  //Places value at the top of the Stack
  push(val)
  {
    var newNode = new Node(val);
    
    if(this.head === null)
    {
      this.head = newNode;
      this.tail = newNode;

    }
    else
    {
      var temp = this.head;
      this.head = newNode;
      newNode.next = temp;
    }
    
    return ++this.length;
  }

  //Removes the top value of the stack
  pop()
  {
    if(this.head === null)
    {
      return null;
    }
    else
    {
      var oldHead = this.head;
      var newHead = this.head.next;
      if(this.head === this.tail)
      {
        this.tail = null
      }
      oldHead.next = null;
      this.head = newHead;
    }
    return --this.length;
  }
}

class Node
{
  constructor(val)
  {
    this.value = val;
    this.next = null;
  }
}

var stack = new Stack();



